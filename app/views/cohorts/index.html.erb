<% provide(:title, 'All Cohorts') %>

<div class="row">
  <div class="col-md-12">
    <div class="title-with-button"><h1>All Cohorts</h1></div>
  </div>
</div>
<div class="row row-bordered">
  <div class="col-lg-8"><span class="pull-left"><%= will_paginate %></span></div>
  <div class="col-lg-4">
    <%= link_to "New Cohort", new_cohort_path, class: "btn btn-primary pull-right"%>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <ul class="users">
      <%= render @cohorts %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-lg-12"><%= will_paginate %></div>
</div>
